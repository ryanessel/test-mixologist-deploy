<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <nav>
        <a href="/">Home</a>
        <a href="/ingredientlist">Ingredients</a>
        <a href="/ingredientdetails">Ingredient Details</a>
        {{#unless theUser}}
        <a href="/signup">Sign Up</a>
        <a href="/login">Login</a>
        {{/unless}}
        {{#if theUser}}
        {{#if theUser.image}}
        <a href="/profile">Profile <img src={{theUser.image}} alt="FAIL" id="profileSmallImg"></a>
        {{/if}}
        {{#unless theUser.image}}
        <a href="/profile">Profile <img src='/images/noProfileImage.png' alt="FAIL" id="profileSmallImg"></a>
        {{/unless}}
        
        <form id="logout" action="/logout" method="post">
        <a href='#' onclick="logoutButton()">Logout</a>
        </form>
        {{/if}}
        
    </nav>


    {{#if errorMessage}}
    <div class="error-div">
        {{errorMessage}}
    </div>
    {{/if}}
    
    {{#if successMessage}}
    <div class="success-div">
        {{successMessage}}
    </div>
    {{/if}}

    <div class="fullPage">
    {{{body}}}
    </div>

    <script src="/scripts/script.js"></script>
</body>
</html>